AgriChain_JAVA/
│
├── Data/                               # (Optional folder for future JDBC / CSV later)
│   └── users.txt                       # (Not used now — only placeholder)
│
├── Documentation/                      # reports / ppt / diagrams
│   └── Project Report.pdf
│
└── Src/
    └── agrichain/
        │
        ├── main/
        │   └── AgriChainMain.java      # Entry/start point
        │
        ├── gui/                        # ALL UI screens (AWT full screen & navigation)
        │   ├── MainPage.java           # First screen (Login / Signup)
        │   ├── LoginGui.java           # Login window
        │   ├── SignUpGui.java          # Register window
        │   ├── HomeDashboard.java      # Tile style dashboard (role selection)
        │   ├── FarmerDashboard.java    # Farmer UI with canvas
        │   ├── BuyerDashboard.java     # Buyer UI with canvas
        │   ├── ConsumerDashboard.java  # Consumer UI with canvas
        │   └── TransporterDashboard.java # Transporter UI + progress bar + multithread
        │
        ├── model/                      # All core data classes (pure OOP)
        │   ├── User.java               # Base class (id,name,password,role)
        │   ├── Farmer.java             # Farmer specific object
        │   ├── Buyer.java              # Buyer specific object
        │   ├── Consumer.java           # Consumer specific object
        │   ├── Transporter.java        # Transporter specific object + vehicle
        │   ├── Crop.java               # Crop data model
        │   └── Order.java              # Order model
        │
        ├── service/                     # Logic layer (no file, no db, no gui)
        │   ├── AuthService.java         # Validate login (hardcoded users)
        │   ├── FarmerService.java       # Dummy crop add / print actions
        │   ├── BuyerService.java        # Dummy order place / view
        │   ├── ConsumerService.java     # Dummy history reference
        │   └── TransporterService.java  # Multithreading delivery progress simulation
        │
        └── util/                        # Utility helper classes
            ├── IDGenerator.java         # (Optional) auto id for orders / crops
            └── InputValidator.java      # Simple validation (empty fields / numbers)
